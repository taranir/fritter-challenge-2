<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include imports %>
    <link rel='stylesheet' href='stylesheets/login.css'>
    <script src="javascripts/login.js"></script>
  </head>
  <body>
    <div id="wrap">
      <div id="content">
        <div id="header">
          <span id="title">Fritter</span>
          tianm 6.170 Project 2.2
          <br><br>
          <button class="btn btn-primary" id="login-btn">Login</button>
          <button class="btn btn-success" id="signup-btn">Sign Up</button>
        </div>
        <div id="login-panel" class="panel">
          <h2>Login</h2>
          <form role="form" action="users/login" method="POST">
            <div class="form-group">
              <label for="username"></label>
              <input type="text" class="form-control" id="username" name="username" placeholder="Username"></input>
            </div>
            <div class="form-group">
              <label for="password"></label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Password"></input>
            </div>
            <button id="login-submit" type="submit" class="btn btn-default">Submit</button>
          </form>
        </div>
        <div id="signup-panel" class="panel">
          <h2>Signup</h2>
            <form role="form" action="users/create" method="POST">
              <div class="form-group">
                <label for="username"></label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username"></input>
              </div>
              <div class="form-group">
                <label for="password"></label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"></input>
              </div>
              <button id="signup-submit" type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
      </div> <!-- content -->
      <div id="push"></div>
    </div> <!-- wrap -->
  <% include footer %>

  </body>
</html>

